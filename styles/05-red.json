{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Red",
	"description":  "Red-based palette with four shades",
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": [ "#0a0a0a", "#ffffff" ],
					"name": "Black and White",
					"slug": "black-and-white"
				},
				{
					"colors": [ "#b91c1c", "#ffffff" ],
					"name": "Primary and White",
					"slug": "primary-and-white"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(180deg, #b91c1c 0%, #ef4444 100%)",
					"name": "Primary to Secondary",
					"slug": "primary-secondary"
				},
				{
					"gradient": "linear-gradient(180deg, #ef4444 0%, #b91c1c 100%)",
					"name": "Secondary to Primary",
					"slug": "secondary-primary"
				},
				{
					"gradient": "linear-gradient(180deg, #fca5a5 0%, #fee2e2 100%)",
					"name": "Tertiary to Quaternary",
					"slug": "tertiary-quaternary"
				},
				{
					"gradient": "linear-gradient(180deg, #fee2e2 0%, #fca5a5 100%)",
					"name": "Quaternary to Tertiary",
					"slug": "quaternary-tertiary"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#0a0a0a",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#b91c1c",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#ef4444",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#fca5a5",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
					"color": "#fee2e2",
					"name": "Quaternary",
					"slug": "quaternary"
				}
			]
		}
	}
}