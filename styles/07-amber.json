{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Amber",
	"description":  "Amber-based palette with four shades",
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": [ "#0a0a0a", "#ffffff" ],
					"name": "Black and White",
					"slug": "black-and-white"
				},
				{
					"colors": [ "#b45309", "#ffffff" ],
					"name": "Primary and White",
					"slug": "primary-and-white"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(180deg, #b45309 0%, #f59e0b 100%)",
					"name": "Primary to Secondary",
					"slug": "primary-secondary"
				},
				{
					"gradient": "linear-gradient(180deg, #f59e0b 0%, #b45309 100%)",
					"name": "Secondary to Primary",
					"slug": "secondary-primary"
				},
				{
					"gradient": "linear-gradient(180deg, #fcd34d 0%, #fef3c7 100%)",
					"name": "Tertiary to Quaternary",
					"slug": "tertiary-quaternary"
				},
				{
					"gradient": "linear-gradient(180deg, #fef3c7 0%, #fcd34d 100%)",
					"name": "Quaternary to Tertiary",
					"slug": "quaternary-tertiary"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#0a0a0a",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#b45309",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#f59e0b",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#fcd34d",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
					"color": "#fef3c7",
					"name": "Quaternary",
					"slug": "quaternary"
				}
			]
		}
	}
}