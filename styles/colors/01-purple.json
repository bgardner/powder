{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Purple",
	"description":  "Purple-based palette with three shades",
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": [ "#ffffff", "#ffffff" ],
					"name": "White and White",
					"slug": "white-and-white"
				},
				{
					"colors": [ "#0a0a0a", "#ffffff" ],
					"name": "Contrast and White",
					"slug": "contrast-and-white"
				},
				{
					"colors": [ "#581c87", "#ffffff" ],
					"name": "Primary and White",
					"slug": "primary-and-white"
				},
				{
					"colors": [ "#7e22ce", "#ffffff" ],
					"name": "Secondary and White",
					"slug": "secondary-and-white"
				},
				{
					"colors": [ "#a855f7", "#ffffff" ],
					"name": "Tertiary and White",
					"slug": "tertiary-and-white"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(var(--wp--preset--color--base) 50%, var(--wp--preset--color--contrast) 50%)",
					"name": "Base to Contrast",
					"slug": "base-contrast"
				},
				{
					"gradient": "linear-gradient(var(--wp--preset--color--contrast) 50%, var(--wp--preset--color--base) 50%)",
					"name": "Contrast to Base",
					"slug": "contrast-base"
				},
				{
					"gradient": "linear-gradient(180deg, #581c87 0%, #7e22ce 100%)",
					"name": "Primary to Secondary",
					"slug": "primary-secondary"
				},
				{
					"gradient": "linear-gradient(180deg, #7e22ce 0%, #581c87 100%)",
					"name": "Secondary to Primary",
					"slug": "secondary-primary"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#0a0a0a",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#581c87",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#7e22ce",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#a855f7",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
					"color": "#f5f5f5",
					"name": "Neutral",
					"slug": "neutral"
				}
			]
		}
	}
}