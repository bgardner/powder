{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Blue",
	"description":  "Blue-based palette with four shades",
	"settings": {
		"color": {
			"duotone": [
				{
					"colors": [ "#0a0a0a", "#ffffff" ],
					"name": "Black and White",
					"slug": "black-and-white"
				},
				{
					"colors": [ "#1d4ed8", "#ffffff" ],
					"name": "Primary and White",
					"slug": "primary-and-white"
				}
			],
			"gradients": [
				{
					"gradient": "linear-gradient(180deg, #1d4ed8 0%, #3b82f6 100%)",
					"name": "Primary to Secondary",
					"slug": "primary-secondary"
				},
				{
					"gradient": "linear-gradient(180deg, #3b82f6 0%, #1d4ed8 100%)",
					"name": "Secondary to Primary",
					"slug": "secondary-primary"
				},
				{
					"gradient": "linear-gradient(180deg, #93c5fd 0%, #dbeafe 100%)",
					"name": "Tertiary to Quaternary",
					"slug": "tertiary-quaternary"
				},
				{
					"gradient": "linear-gradient(180deg, #dbeafe 0%, #93c5fd 100%)",
					"name": "Quaternary to Tertiary",
					"slug": "quaternary-tertiary"
				}
			],
			"palette": [
				{
					"color": "#ffffff",
					"name": "Base",
					"slug": "base"
				},
				{
					"color": "#0a0a0a",
					"name": "Contrast",
					"slug": "contrast"
				},
				{
					"color": "#1d4ed8",
					"name": "Primary",
					"slug": "primary"
				},
				{
					"color": "#3b82f6",
					"name": "Secondary",
					"slug": "secondary"
				},
				{
					"color": "#93c5fd",
					"name": "Tertiary",
					"slug": "tertiary"
				},
				{
					"color": "#dbeafe",
					"name": "Quaternary",
					"slug": "quaternary"
				}
			]
		}
	}
}